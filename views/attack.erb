<% if @game.current_player == @game.player_2 %>

<h1> <%= @game.player_1.name %> attacked <%= @game.player_2.name %> </h1>
<br>
<h1> <%= @game.player_2.name %>: <%= @game.player_2.hit_points %>HP </h1>

<% else %>

<h1> <%= @game.player_2.name %> attacked <%= @game.player_1.name %> </h1>
<br>
<h1> <%= @game.player_1.name %>: <%= @game.player_1.hit_points %>HP </h1>

<% end %>


<a href="/play">OK</a>
